<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Basic Mongoose App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/css/styles.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

</head>

<body>
    <div class="wrapper">
        <h1>Elephants</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Action</th>
                </tr>
            </thead>
            <% for (var i=0; i<elephants.length; i++){ %>
                <tr>
                    <td>
                        <a href="/elephants/<%= elephants[i]['_id'] %>">
                            <%= elephants[i]['name'] %>
                        </a>
                    </td>
                    <td>
                        <%= elephants[i]['age'] %>
                    </td>
                    <td>
                        <form method="post" action="/delete/<%= elephants[i]['_id'] %>">
                            <input type="submit" value="delete" class="form-btn">
                        </form>
                        <form method="post" action="/edit/<%= elephants[i]['_id'] %>">
                            <input type="submit" value="edit" class="form-btn">
                        </form>
                    </td>
                </tr>
                <% } %>
        </table>
        <p>
            <a href="/add">Add new elephant</a>
        </p>
    </div>
</body>

</html>