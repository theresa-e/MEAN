<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/css/styles.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script>
        $(document).ready(function () {
            var socket = io(); // instantiate socket
            $('#purple').submit(function () {
                socket.emit('purple');
                return false;
            })
            $('#blue').submit(function () {
                socket.emit('blue');
                return false;
            })
            $('#pink').submit(function () {
                socket.emit('pink');
                return false;
            })
            socket.on('purpleBg', function () {
                $('body').css("background-color", "#763f9b");
            })
            socket.on('blueBg', function () {
                $('body').css("background-color", "#4a70b2");
            })
            socket.on('pinkBg', function () {
                $('body').css("background-color", "#a5388a");
            })
        })
    </script>
</head>

<body>
    <div class="wrapper">
        <h1>Pick a background color below: </h1>
        <h2>
            <span id="count"></span>
        </h2>
        <div class="buttons">
            <form id="purple">
                <input type="submit" value="Purple">
            </form>
            <form id="blue">
                <input type="submit" value="Blue">
            </form>
            <form id="pink">
                <input type="submit" value="Pink">
            </form>
        </div>
    </div>
</body>

</html>